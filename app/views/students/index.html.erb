<%= render "index_title", entity: t("title.student"), path: new_student_path %>

<div class="table-responsive">
  <table class="table table-hover">
    <%= render "table_header",
      headers: ["#", t("title.title.first_name"), t("title.last_name"), t("title.phone"), t("title.parent_phone"), t("title.email"), t("title.gender"), t("title.date_of_birth"), t("title.active")],
      colspan: 3 %>

    <tbody>
      <% @students.each do |student| %>
        <tr>
          <th scope="row"><%= student.id %></th>
          <td><%= student.first_name %></td>
          <td><%= student.last_name %></td>
          <td><%= student.phone %></td>
          <td><%= student.parents_phone %></td>
          <td><%= student.email %></td>
          <td><%= student.gender %></td>
          <td><%= student.date_of_birth %></td>
          <td><%= student.active %></td>
          <td>
            <%= link_to_icon student, icon: "info", type: "info" %>
            <%= link_to_icon edit_student_path(student), icon: "edit", type: "info" %>
            <%= link_to_icon student, method: :delete, data: { confirm: 'Are you sure?' }, icon: "trash-alt", type: "danger" %>
            <%= link_to_icon new_enrolment_path(student_id: student.id), icon: "registered", type: "info" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= render "pagination", records: @students %>