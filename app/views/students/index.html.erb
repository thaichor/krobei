<div class="row">
  <div class="col-md-8">
    <h1>Students</h1>
  </div>
  <div class="col-md-4">
    <div style="float: right">
      <%= link_to 'Create New Student', new_student_path, class: "btn btn-outline-primary" %>
    </div>
  </div>
</div>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Phone</th>
      <th scope="col">Parents Phone</th>
      <th scope="col">Email</th>
      <th scope="col">Gender</th>
      <th scope="col">Date of birth</th>
      <th scope="col">Active</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <th scope="row"><%= student.id %></th>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.phone %></td>
        <td><%= student.parents_phone %></td>
        <td><%= student.email %></td>
        <td><%= student.gender %></td>
        <td><%= student.date_of_birth.strftime("%d-%b-%Y") %></td>
        <td><%= student.active %></td>
        <td align="right">
          <%= link_to 'Show', student, class: 'btn btn-sm btn-success' %>
          <%= link_to 'Edit', edit_student_path(student), class: 'btn btn-sm btn-primary' %>
          <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>