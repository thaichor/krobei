<div class="row">
  <p id="notice"><%= notice %></p>
  <div class="col-md-12 mt-15 mb-10">
    <%= link_to 'Back', students_path, class: 'btn btn-secondary' %>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <p>
      <strong>First name:</strong>
      <%= @student.first_name %>
    </p>

    <p>
      <strong>Last name:</strong>
      <%= @student.last_name %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= @student.phone %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @student.email %>
    </p>

    <p>
      <strong>Gender:</strong>
      <%= @student.gender %>
    </p>

    <p>
      <strong>Date of birth:</strong>
      <%= @student.date_of_birth %>
    </p>
    <%= link_to 'Edit', edit_student_path(@student), class: 'btn btn-success' %>
  </div>
</div>

