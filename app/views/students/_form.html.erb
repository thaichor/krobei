<div class="row">
  <div class="col-md-4 offset-4">
    <%= simple_form_for student do |form| %>
      <% if student.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

          <ul>
            <% student.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.input :first_name, label: t("title.first_name") %>
        <%= form.input :last_name, label: t("title.last_name") %>
        <%= form.input :phone, label: t("title.phone") %>
        <%= form.input :parents_phone, label: t("title.parent_phone") %>
        <%= form.input :email, label: t("title.email") %>
        <%= form.input :gender, as: :radio_buttons, collection: [t("title.female"), t("title.male")], label: t("title.gender") %>
        <%= form.input :date_of_birth, order: [:day, :month, :year],label: t("title.date_of_birth") %>
        <%= form.input :active, as: :boolean, label: t("title.active") %>
      </div>

      <div class="actions">
        <%= form.button :submit, value: t("title.update"), class: "btn btn-primary" %>
        <%= link_to t("action.cancel"), students_path, class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
