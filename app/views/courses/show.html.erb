<div class="row">
  <div class="col-md-4 offset-4">
    <div class="card" style="width: 100%;">
      <div class="card-header">
        <center><b><%= "#{@course.name}" %></b></center>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <%= t("table.start_date") %> <span style="float: right"><%= @course.start_date %></span>

        </li>
        <li class="list-group-item">
         <%= t("table.end_date") %> <span style="float: right"><%= @course.end_date %></span>
        </li>
        <li class="list-group-item">
          <%= t("entity.teacher") %> <span style="float: right"><%= @course.teacher.full_name %></span>  
        </li>
         <li class="list-group-item">
          <%= t("table.max_student") %> <span style="float: right"><%= @course.max_students %></span> 
        </li>
      </ul>
      <div class="card-body">
        <%= link_to t("action.edit"), edit_course_path(@course), class: 'btn btn-primary' %>
        <%= link_to t("action.back"), courses_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-4 offset-4">
    <div class="card" style="width: 100%;">
      <div class="card-header">
          <center><b><%= t("table.student_registered") %></b></center>
      </div>
      <ul class="list-group list-group-flush">
        <% @course.students.each do |student| %>
          <li class="list-group-item">
            <%= student.full_name %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>