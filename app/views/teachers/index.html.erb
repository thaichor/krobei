<p id="notice"><%= notice %></p>

<h1 style="display:inline;margin-top: ;margin-bottom:10px;" >Teachers</h1>
<%= link_to 'Add New Teacher', new_teacher_path,class: "btn btn-primary new-button" %>
<table class="table">
    <thead class="thead-dark">
      <tr>
       <th>First name</th>
        <th>Last name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Date of birth</th>
        <th colspan="3">
      </tr>
    </thead>
    <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.first_name %></td>
        <td><%= teacher.last_name %></td>
        <td><%= teacher.phone %></td>
        <td><%= teacher.email %></td>
        <td><%= teacher.gender %></td>
        <td><%= teacher.date_of_birth %></td>
        <td><%= link_to 'Show', teacher,class: "btn btn-info"  %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher),class: "btn btn-primary"  %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
