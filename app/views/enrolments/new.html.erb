<h1>New Enrolment</h1>

<div class="row">
  <div class="col-md-4 offset-4">
    <%= simple_form_for @enrolment do |form| %>
      <%= form.input :student_id, :as => :hidden %>
      <%= form.association :course, label_method: :name %>

      <div class="actions">
        <%= form.button :submit, class: "btn btn-primary" %>
        <%= link_to 'Back', students_path, class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>